<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/encrypt_main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/key_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/key_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="expandCollapseKeyFieldAction"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/keys_expand_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/key_generation"
                        android:src="@drawable/vpn_key_24px"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/keys_expand_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/key_generation"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        app:layout_constraintBottom_toBottomOf="@id/keys_expand_icon"
                        app:layout_constraintStart_toEndOf="@id/keys_expand_icon" />

                    <ImageView
                        android:id="@+id/keys_expand_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/key_generation"
                        android:src="@drawable/expand_content_24px"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/keys_expand_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/key_card_header">

                    <TextView
                        android:id="@+id/public_key_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/public_key"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/private_key_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/private_key"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/public_key_content" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/key_label_barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="right"
                        app:constraint_referenced_ids="public_key_label, private_key_label" />

                    <TextView
                        android:id="@+id/public_key_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:hint="@string/generate_key_first"
                        android:minLines="2"
                        android:textIsSelectable="true"
                        app:layout_constraintLeft_toRightOf="@id/key_label_barrier"
                        app:layout_constraintRight_toLeftOf="@id/share_public_key_btn"
                        app:layout_constraintTop_toTopOf="@id/public_key_label" />

                    <TextView
                        android:id="@+id/private_key_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:hint="@string/generate_key_first"
                        android:minLines="2"
                        android:textIsSelectable="true"
                        app:layout_constraintLeft_toRightOf="@id/key_label_barrier"
                        app:layout_constraintRight_toLeftOf="@id/share_public_key_btn"
                        app:layout_constraintTop_toTopOf="@id/private_key_label" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/copy_public_key_btn"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="copyPublicKeyAction"
                        app:backgroundTint="@android:color/transparent"
                        app:icon="@drawable/content_copy_24px"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/public_key_content"
                        app:rippleColor="?attr/colorPrimary"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/share_public_key_btn"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/copy_content"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="sharePublicKeyAction"
                        app:backgroundTint="@android:color/transparent"
                        app:icon="@drawable/share_24px"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintBottom_toBottomOf="@id/copy_public_key_btn"
                        app:layout_constraintRight_toLeftOf="@id/copy_public_key_btn"
                        app:layout_constraintTop_toTopOf="@id/copy_public_key_btn"
                        app:rippleColor="?attr/colorPrimary"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/apply_private_key_btn"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/copy_content"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="applyPrivateKeyAction"
                        app:backgroundTint="@android:color/transparent"
                        app:icon="@drawable/edit_arrow_down_24px"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintBottom_toBottomOf="@id/private_key_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/private_key_content"
                        app:rippleColor="?attr/colorPrimary"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                    <Button
                        android:id="@+id/generate_keys_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="generateRSAKeysAction"
                        android:text="@string/generate_keys"
                        app:layout_constraintBottom_toBottomOf="@id/key_bits_dropdown_box"
                        app:layout_constraintTop_toTopOf="@id/key_bits_dropdown_box" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/key_bits_dropdown_box"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:hint="@string/key_bits"
                        app:boxBackgroundColor="?attr/colorSurfaceContainer"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintLeft_toRightOf="@id/generate_keys_btn"
                        app:layout_constraintTop_toBottomOf="@id/private_key_content"
                        app:strokeWidth="0dp">

                        <AutoCompleteTextView
                            android:id="@+id/key_bits_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/encrypt_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/key_cardview"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/encrypt_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="expandCollapseEncryptFieldAction"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/encrypt_expand_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/key_generation"
                        android:src="@drawable/encrypted_24px"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/encrypt_expand_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/encrypt"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        app:layout_constraintBottom_toBottomOf="@id/encrypt_expand_icon"
                        app:layout_constraintStart_toEndOf="@id/encrypt_expand_icon" />

                    <ImageView
                        android:id="@+id/encrypt_expand_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/key_generation"
                        android:src="@drawable/expand_content_24px"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/encrypt_expand_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/encrypt_card_header">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/encrypt_input_box"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/up_box_hint"
                        app:boxBackgroundColor="?attr/colorSurfaceContainer"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="clear_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/encrypt_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:lines="5"
                            android:scrollbars="vertical"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/encrypt_key_input_box"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/up_box_hint"
                        app:boxBackgroundColor="?attr/colorSurfaceContainer"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="clear_text"
                        app:layout_constraintTop_toBottomOf="@+id/encrypt_input_box"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/encrypt_key_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:lines="3"
                            android:scrollbars="vertical"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/literal_type_dropdown_box"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/encrypt_literal_type"
                        app:boxBackgroundColor="?attr/colorSurfaceContainer"
                        app:boxBackgroundMode="filled"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/encrypt_key_input_box"
                        app:strokeWidth="0dp">

                        <AutoCompleteTextView
                            android:id="@+id/literal_type_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/encrypt_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="encryptAction"
                        android:text="@string/encrypt"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/literal_type_dropdown_box" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/encrypt_decrypt_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/encrypt_btn"
                        app:layout_constraintLeft_toRightOf="@id/encrypt_btn"
                        app:layout_constraintTop_toTopOf="@id/encrypt_btn"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/toggle_encrypt"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_encrypt_24"
                            android:text="@string/encrypt" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/toggle_decrypt"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_decrypt_24"
                            android:text="@string/decrypt" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/encrypt_output"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/encrypt_btn" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/share_enc_dec_text_btn"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="shareEncryptOutputAction"
                        app:backgroundTint="@android:color/transparent"
                        app:icon="@drawable/share_24px"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toStartOf="@+id/copy_enc_dec_text_btn"
                        app:layout_constraintTop_toBottomOf="@id/encrypt_output"
                        app:rippleColor="?attr/colorPrimary"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/copy_enc_dec_text_btn"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/copy_content"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="copyEncryptOutputAction"
                        app:backgroundTint="@android:color/transparent"
                        app:icon="@drawable/content_copy_24px"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/encrypt_output"
                        app:rippleColor="?attr/colorPrimary"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>